@model Amoozeshgah.ViewModel.AddSessionScheduleDto
<link href="~/wwwroot/bower_components/Time-Selector-Picktim/css/picktim.css" rel="stylesheet" />
@{
    ViewBag.Title = "AddNewSession";
    Layout = "~/Views/Shared/_LayoutTableLess.cshtml";
}
<style>
    .form-horizontal .control-label {
        text-align: right;
    }
</style>



@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.CourseId)
    <div class="col-md-12">
        <div class="form-horizontal">
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.StartDayJalali, htmlAttributes: new { @class = "control-label col-md-2 " })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.StartDayJalali, new { htmlAttributes = new { @class = "form-control ltrInput",style="background:white" ,@readonly="readonly"} })
                    @Html.ValidationMessageFor(model => model.StartDayJalali, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="control-label col-md-2">ساعت شروع کلاس</label>
                <div class="col-md-4">
                    <div id="timepicker"></div>
                </div>
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.ClassroomId, htmlAttributes: new { @class = "control-label col-md-2 " })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.ClassroomId,Model.Classrooms, htmlAttributes: new { @class = "form-control bsp"})
                    @Html.ValidationMessageFor(model => model.ClassroomId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <button type="submit">Submit</button>
}




@section scripts
{
    <script src="~/wwwroot/bower_components/Time-Selector-Picktim/js/StartHour.js"></script>

    <script>
        $("#timepicker").picktim({ mode: 'h24' });
    </script>
    
    
<script src="~/wwwroot/bower_components/persian-jalali-calendar/src/kamadatepicker.js"></script>

    <script>

        var customOptions = {
            closeAfterSelect: true
            , buttonsColor: "blue"
            , forceFarsiDigits: false
            , markToday: true
            , markHolidays: true
            , highlightSelectedDay: true
            , sync: true
            , gotoToday: true
        }
        kamaDatepicker('StartDayJalali', customOptions);

    </script>
}
