<!DOCTYPE html>
<html lang="en" id="bdy">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="">

    <link href="~/wwwroot/bower_components/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    @Styles.Render("~/wwwroot/bundles/styles")
    <link href="~/wwwroot/Content/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" />

    
</head>
<body id="bdy">
    <div id="wrapper">
        @Html.Action("Sidebar", "Menus", new { area = "", controller = ViewContext.RouteData.Values["Controller"].ToString(), action = ViewContext.RouteData.Values["Action"].ToString() })
        <div id="page-wrapper">
            @Html.BreadCrumb($"{ViewBag.Title}")

            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/wwwroot/bundles/scripts")
    
    <script src="~/wwwroot/bower_components/jquery-ui/jquery-ui.min.js"></script>

     <!--notify Config-->
    <script>
        $.notify.defaults({
            className: "success",
            globalPosition: "top center"
        });
    </script>

    <!-- Datatables -->
    @Scripts.Render("~/bundles/data-tables")
    <!-- Loading bar TODO: Move to a .js file -->
    <script>
        var options = {
            classname: 'my-class',
            id: 'my-id',
            target: document.getElementById('myDivId')
        };

        var nanobar = new Nanobar(options);

        //move bar
        nanobar.go(30); // size bar 30%
        nanobar.go(76); // size bar 76%

        // size bar 100% and and finish
        nanobar.go(100);
    </script>
    <script>
        $("#fsc").click(function () {


            if ($("#fsc").hasClass("fullscreen")) {

                $("#fsc").removeClass("fullscreen");
                $("#fsc").addClass("exitfullscreen");
                $("#fullscreenicon").addClass("text-danger");
                var area = document.getElementById("bdy");
                area.webkitRequestFullscreen();

            }
            else {
                $("#fsc").addClass("fullscreen");
                $("#fsc").removeClass("exitfullscreen");
                $("#fullscreenicon").removeClass("text-danger");

                document.webkitExitFullscreen();
            }
        })
    </script>

    <script>
        //LobiPanel
        $(function () {
            $('.lobiPanel').lobiPanel({
                stateful: true,
                reload: false,
                close: false,
                unpin: false

            });
        });
    </script>
    <script>
        $.notify.defaults({
            className: "success",
            globalPosition: "bottom center"
        });
    </script>
    @RenderSection("scripts", false)
    <script src="~/wwwroot/app_files/jquery-ui-popup.js"></script>
    <script src="~/wwwroot/app_files/ajax-submit-form.js"></script>
</body>
</html>
