@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link href="~/wwwroot/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/wwwroot/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/wwwroot/bower_components/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/wwwroot/Content/vazir-font.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            margin: 0;
            padding: 0;
            background: #e7ecf0;
            font-family: Vazir;
        }

        p {
            font-size: 12px;
            color: #373737;
            line-height: 18px;
        }

            p a {
                color: #218bdc;
                font-size: 12px;
                text-decoration: none;
            }

        a {
            outline: none;
        }

        .f-left {
            float: left;
        }

        .f-right {
            float: right;
        }

        .clear {
            clear: both;
            overflow: hidden;
        }

        #block_error {
            width: 845px;
            height: 384px;
            border: 1px solid #cccccc;
            margin: 72px auto 0;
            -moz-border-radius: 4px;
            -webkit-border-radius: 4px;
            border-radius: 4px;
            background: #fff url("/wwwroot/images/gear.gif") no-repeat 0 51px;
        }

            #block_error div {
                padding: 100px 40px 0 186px;
            }

                #block_error div h2 {
                    color: #218bdc;
                    font-size: 24px;
                    display: block;
                    padding: 0 0 14px 0;
                    border-bottom: 1px solid #cccccc;
                    margin-bottom: 12px;
                    font-weight: normal;
                }
    </style>
</head>
<body marginwidth="0" marginheight="0">
    <div id="block_error">
        <div>
            <h2>صفحه مورد نظر یافت نشد!</h2>


            <p id="details">
                <br />
                <br />
                &nbsp;&nbsp;&nbsp;&nbsp;  @ViewData["RedirectReason"]
                <br />
                <br />
            </p>
            <a class="btn btn-default" id="togglwdetails" onclick="togglwdetails()">جزئیات بیشتر</a>

        </div>
    </div>
    <script src="~/wwwroot/bower_components/data-tables/jQuery-3.2.1/jquery-3.2.1.min.js"></script>
    <script>
        $("#details").hide();

        function togglwdetails() {
            $("#details").slideToggle("slow");
            $("#togglwdetails").text(function (i, text) {
                return text === "جزئیات بیشتر" ? "جزئیات کمتر" : "جزئیات بیشتر";
            }).show("slow")


        }
    </script>
</body>
</html>
